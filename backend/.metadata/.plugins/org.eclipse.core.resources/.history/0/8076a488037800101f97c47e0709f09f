package com.example.backend.service;

import com.example.backend.model.User;
import com.example.backend.model.DashboardItem;
import com.fasterxml.jackson.core.type.TypeReference;
import com.fasterxml.jackson.databind.ObjectMapper;
import org.springframework.stereotype.Service;

import java.io.File;
import java.io.IOException;
import java.nio.file.*;
import java.util.*;

@Service
public class DataService {
    private final ObjectMapper mapper = new ObjectMapper();

    // Files stored in a writable "data" folder
    private final Path dbPath = Paths.get("data/db.json");
    private final Path detailsPath = Paths.get("data/details.json");

    public DataService() throws IOException {
        if (!Files.exists(dbPath.getParent())) {
            Files.createDirectories(dbPath.getParent());
        }
        if (!Files.exists(dbPath)) {
            Files.write(dbPath, "{\"users\":[]}".getBytes());
        }
        if (!Files.exists(detailsPath)) {
            Files.write(detailsPath, "[]".getBytes());
        }
    }

    // ===== USERS =====
    public List<User> getUsersFromDb() throws IOException {
        Map<String, List<User>> data = mapper.readValue(
                dbPath.toFile(),
                new TypeReference<Map<String, List<User>>>() {}
        );
        return data.getOrDefault("users", new ArrayList<>());
    }

    public void saveUsersToDb(List<User> users) throws IOException {
        Map<String, List<User>> wrapper = new HashMap<>();
        wrapper.put("users", users);
        mapper.writerWithDefaultPrettyPrinter().writeValue(dbPath.toFile(), wrapper);
    }

    // ===== DETAILS =====
    public List<DashboardItem> getDetailsFromDb() throws IOException {
        return mapper.readValue(detailsPath.toFile(), new TypeReference<List<DashboardItem>>() {});
    }

    public void saveDetailsToDb(List<DashboardItem> details) throws IOException {
        mapper.writerWithDefaultPrettyPrinter().writeValue(detailsPath.toFile(), details);
    }
}
